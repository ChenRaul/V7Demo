<?xml version="1.0" encoding="utf-8"?>
<!-- 其实gridLayout是不适合作为自定义Dialog的view组件
	从例子中可以对比出该xml文件在dialog中和acitvity中的使用的差别
 -->
    <android.support.v7.widget.GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res/com.hujiang.designsupportlibrarydemo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
       	android:padding="10dip"
        app:columnCount="4"
        >
        <TextView 
            android:id="@+id/dialog_login_title"
            app:layout_columnSpan="4"
            app:layout_row="0"
			android:text="该自定义View的父View是GridLayout"
            />
        <TextView 
            android:text="用户名:"
            app:layout_row="1"
            app:layout_columnSpan="1"
            app:layout_column="0"
            
            />
        <EditText 
            android:hint="请输入用户名"
            app:layout_columnSpan="3"
             app:layout_column="1"
            app:layout_gravity="fill_horizontal"
             />
        <TextView 
            android:text="密码:"
            app:layout_columnSpan="1"
            app:layout_row="2"
             app:layout_column="0"
            />
        <EditText 
            android:hint="请输入密码"
            app:layout_columnSpan="3"
             app:layout_column="1"
              app:layout_gravity="fill_horizontal"
            />
        <TextView 
            android:id="@+id/cancle"
            android:text="取消"
            app:layout_row="4"
            app:layout_column="1"
            android:padding="5dip"
            android:layout_margin="10dip"
            />
         <TextView 
             android:id="@+id/login"
            android:text="确认"
            android:layout_margin="10dip"
            android:padding="5dip"
            />
    </android.support.v7.widget.GridLayout>
    
